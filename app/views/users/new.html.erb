<h1>Create User</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(word.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit "Create your account"%>
<% end %>
