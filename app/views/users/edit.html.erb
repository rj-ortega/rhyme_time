<h1>Editing Word</h1>
<%= form_with(model: word, local: true) do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>
      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :audio %>
    <%= form.text_field :audio %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Show', @word, class: "button" %> |
<%= link_to 'Destroy', @word, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %> |
<%= link_to 'Back', words_path, class: "button" %>
